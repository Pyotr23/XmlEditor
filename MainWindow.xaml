<Window x:Class="XmlEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XmlEditor"
        mc:Ignorable="d"
        Title="XmlEditor" SizeToContent="WidthAndHeight">    
    <DockPanel LastChildFill="True" DataContext="{Binding Main, Source={StaticResource Locator}}">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Выбрать" Command="{Binding ChooseFileCommand}"/>
                <MenuItem Header="Просмотреть"/>
            </MenuItem>            
        </Menu>
        <TextBlock DockPanel.Dock="Top" Text="Исследуемый файл:" Margin="5"/>
        <TextBox Text="{Binding FilePath}" DockPanel.Dock="Top" Width="Auto" Margin="5, 0, 5, 5"/>
        <ListBox ItemsSource="{Binding BadParameterIds}"  DockPanel.Dock="Top" Height="50" Margin="5, 0, 5, 5"/>
        <TextBlock Text="{Binding Info}" FontStyle="Italic" DockPanel.Dock="Bottom" Background="LightGray" Padding="5, 0, 5, 0"/>
    </DockPanel>
</Window>
